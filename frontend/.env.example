# =============================================================================
# Frontend Service - Environment Variables
# Copy to .env.local for local development
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Application Metadata
NEXT_PUBLIC_APP_NAME=Funding Application Platform
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (client-side)
NEXT_PUBLIC_FEATURE_SSO=false
NEXT_PUBLIC_FEATURE_MFA=false

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Sentry (optional)
# NEXT_PUBLIC_SENTRY_DSN=

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xlsx,.xls,.png,.jpg,.jpeg,.mp4

# Session timeout warning (in ms, 5 minutes before expiry)
NEXT_PUBLIC_SESSION_WARNING_MS=300000

# Timezone display
NEXT_PUBLIC_TIMEZONE=Europe/London
